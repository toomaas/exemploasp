@using System.Web.Mvc.Html
@using exemploasp.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Content/css/teste.css" media="screen" type="text/css" />
    <title>@ViewBag.Title - Guider Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    
    
    <!--  FOOTER -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/Footer-with-social-icons.css">
    

</head>
<body>
 
        @{
        if (Session["UserAccountId"] != null)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" rel="home" href="/Home/Index" title="Buy Sell Rent Everyting">
                            <img style="max-width: 80px; margin-top: -10px;"
                                 src="/Content/images/logo_nav.png">
                        </a>



                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Candidaturas", "Candidatura", "UserAccountExposicao")</li>
                            <li>@Html.ActionLink("Exposições", "Lista", "Exposicao")</li>
                            @{
                            if ((string)Session["TipoUtilizador"] == "Administrador")
                            {
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        Gestão Do Museu
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Temas", "Index", "Tema")</li>
                                        <li>@Html.ActionLink("Exposições", "Index", "Exposicao")</li>
                                        <li>@Html.ActionLink("Marcações", "Index", "Marcacao")</li>
                                        <li>@Html.ActionLink("Utilizadores", "Index", "Account")</li>
                                        <li>@Html.ActionLink("Candidaturas", "GestaoCandidaturas", "UserAccountExposicao")</li>
                                    </ul>
                                </li>
                        }
                            }
                        </ul>


                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    @Session["Username"]
                                    <span class="caret dropdown-toggle"></span>
                                </a>

                                <ul class="dropdown-menu">
                                    
                                
                                    <li>@Html.ActionLink("Conta de Utilizador", "PerfilUser", "Account")</li>
                                    <li>@Html.ActionLink("Editar Perfil", "Edit", "Account")</li>
                                    <li>&nbsp;</li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                                </ul>

                            </li>
                        </ul>


                    </div>
                </div>
            </div>
    }
        }

            @RenderBody()
            @if (Session["UserAccountId"] != null)
        {

            <footer id="myFooter">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4 myCols">
                            <h5>Sobre</h5>
                            <br/>
                            <ul>
                                <li align ="justify">
                                    A Quinta das Cruzes é uma das quintas com maior tradição histórica do Funchal, 
                                    ligada à família dos primeiros capitães donatários, 
                                    uma vez que foi nestas imediações que a mesma estabeleceu a sua segunda residência. 
                                    Permaneceu na família Câmara até meados do século XVII, 
                                    transitando para a família Lomelino até finais do século XIX.
  
                                </li>
                            </ul>
                        </div>
                        <div class="col-sm-4 myCols">
                            <h5>Localização</h5>
                            <br/>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2786.306355986235!2d-16.915955985428713!3d32.65107369770482!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xc605fe23cfcb4c7%3A0x734b5f191feed738!2sMuseu+da+Quinta+das+Cruzes!5e1!3m2!1spt-PT!2spt!4v1517929231700" sytle="" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                        <div class="col-sm-4 myCols">
                            <h5>Contatos</h5>
                            <br/>
                            <ul>
                                <li><b><u><i class="glyphicon glyphicon-earphone"></i></u></b> 291 740 670</li>
                                <li><b><u><i class="glyphicon glyphicon-envelope"></i></u></b> quintadascruzes.suporte@gmail.com</li>
                            </ul>
                            <br />
                            <ul>
                                <li>
                                    <b><i class="glyphicon glyphicon-time"></i></b>
                                    Terça-feira a Domingo 
                                </li>
                                <li>10:00 - 12:30 e das 14:00 -17:30</li>

                            </ul>
                        </div>


                     
                    </div>
                </div>
                <div class="social-networks">
                    <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                    <a href="#" class="facebook"><i class="fa fa-facebook-official"></i></a>
                    <a href="#" class="google"><i class="fa fa-google-plus"></i></a>
                </div>
                
                
                <div class="footer-copyright">
                    <p>&copy; @DateTime.Now.Year - Guider Management</p>
                </div>
            </footer>

    }


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

</body>


</html>
