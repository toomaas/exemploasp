@using System.Web.Mvc.Html
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Guider Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        if (Session["UserId"] != null)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Guider Management", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Exposições", "Index", "Exposicao")</li>
                            <li>@Html.ActionLink("Temas", "Index", "Tema")</li>
                            <li>@Html.ActionLink("Marcações","Index","Marcacao")</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                                <li>@Html.ActionLink((string) Session["Username"], "PerfilUser", "Account", new {id = Session["UserID"]}, null)</li>

                                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    }

    <div class="container body-content">
        @RenderBody()
        @if (Session["UserId"] != null)
        {
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - Guider Management</p>
        </footer>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
