@using System.Web.Mvc.Html
@using exemploasp.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Guider Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        if (Session["UserAccountId"] != null)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Guider Management", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Exposições", "User", "Exposicao", new { id = Session["UserAccountID"] },null)</li>
                            <li>@Html.ActionLink("Contactos", "Contact", "Home")</li>

                            @{
                                if ((string)Session["TipoUtilizador"] == "Administrador")
                                {
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                            Gestão Do Museu
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Temas", "Index", "Tema")</li>
                                            <li>@Html.ActionLink("Exposições", "Index", "Exposicao")</li>
                                            <li>@Html.ActionLink("Marcações", "Index", "Marcacao")</li>
                                            <li>@Html.ActionLink("Gestão de utilizadores", "Index", "TipoUtilizador")</li>
                                        </ul>
                                    </li>

                                }
                            }

                        </ul>
                        
                        
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    @Session["Username"]
                                    <span class="caret"></span>
                                </a>
                                
                                <ul class="dropdown-menu">
                                
                                    <li>@Html.ActionLink("Conta de Utilizador", "PerfilUser", "Account", new {id=Session["UserAccountId"]},null)</li>
                                    <li>@Html.ActionLink("Editar Perfil", "PerfilUser", "Account",new { id = Session["UserAccountId"] }, null)</li>
                                    <li></li>

                                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                                </ul>

                            </li>
                        </ul>
                 
      
                    </div>
                </div>
            </div>
        }
    }

    <div class="container body-content">
        @RenderBody()
        @if (Session["UserAccountId"] != null)
        {
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - Guider Management</p>
        </footer>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
