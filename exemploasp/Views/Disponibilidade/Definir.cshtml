@model exemploasp.Models.UserAccountExposicao

@{
    ViewBag.Title = "Definir Disponibilidade";
}

<h2>Definir disponibilidade: @Model.Exposicao.Nome</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-12">
                <table id="mytable" class="table table-bordred table-striped">
                    <tr>
                    @{
                        int cnt = 0;
                        List<exemploasp.ViewModels.DataExposicao> datas = ViewBag.Datas;

                        foreach (var data in datas)
                        {
                            if (cnt++ % 3 == 0)
                            {
                                @:</tr><tr>
                            }
                            @:<td>
                            <input type="checkbox" name="selectedDatas" value="@data.Data.Date"/>
                            @data.Data.Date.ToShortDateString() <span>@data.DiaSemana</span>
                            @:</td>
                        }
                        @:</tr>
                    }
                </table>
            </div>
        </div>        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Definir datas" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar atrás", "PerfilUser","Account", new{id = Model.UserAccountID}, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
