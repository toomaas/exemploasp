@model IEnumerable<exemploasp.Models.Tema>

@{
    ViewBag.Title = "Index";
}


<body>

<h2>Index</h2>
    @if (Session["Mensagem"] != null)
       {
           <h4 style="color:red;">Tema criado com @Session["Mensagem"].ToString()</h4>
       }

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.TemaID }) |
                @Html.ActionLink("Details", "Details", new { id=item.TemaID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.TemaID })
            </td>
        </tr>
    }

</table>
    
    @if (ViewBag.Message != null)
    {
        <script type ="text/javascript">
            window.onload = function() {

                alert("@ViewBag.Message");
            }


        </script>
    }
       

</body>
